
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
           http://xmlns.jcp.org/xml/ns/javaee
           http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Login -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>web.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Deposit -->
    <servlet>
        <servlet-name>Deposit</servlet-name>
        <servlet-class>web.DepositServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Deposit</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>

    <!-- Withdraw -->
    <servlet>
        <servlet-name>Withdraw</servlet-name>
        <servlet-class>web.WithdrawServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Withdraw</servlet-name>
        <url-pattern>/withdraw</url-pattern>
    </servlet-mapping>

    <!-- Balance -->
    <servlet>
        <servlet-name>Balance</servlet-name>
        <servlet-class>web.BalanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Balance</servlet-name>
        <url-pattern>/balance</url-pattern>
    </servlet-mapping>

</web-app>
